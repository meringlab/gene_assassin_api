#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('ga-domains-api');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

var server = http.createServer(app);

var boot = function (storage) {
    app.set('storage', storage)
    /**
     * Listen on provided port, on all network interfaces.
     */
    server.listen(port, function () {
        console.info('Express server listening on port ' + app.get('port'));
    });
    server.on('error', onError);
    server.on('listening', onListening);
}

if (require.main === module) {
    const URL = 'mongodb://192.168.1.120:32769/drerio';

    //TODO use service discovery
    //var consul = backend.consul({consul_host: process.env.CONSUL_HOST});
    //consul.serviceDescription('ga-domains-mongodb', function (description) {
    //    const url = 'http://' + description[0].ServiceAddress + ':' + description[0].ServicePort
    //    //
    //    boot(storage);
    //});

    var storage = require('../lib/storage')(URL, function(err, storage) {
        if (err) {
            throw Error(err)
        }
        boot(storage);
    });
} else {
    console.info('Running app as a module')
    exports.boot = boot;
    exports.shutdown = shutdown;
    exports.port = app.get('port');
}

var shutdown = function () {
    server.close();
}

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof port === 'string'
        ? 'Pipe ' + port
        : 'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string'
        ? 'pipe ' + addr
        : 'port ' + addr.port;
    debug('Listening on ' + bind);
}
